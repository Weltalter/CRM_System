<form action="#" id="RemoveOrder" method="post" enctype="multipart/form-data">
    <div style="font-weight: 700;
                font-size: 16px;
                margin: 10px">
        <p>
            Заполните форму, чтобы удалить существующую запись заказа.
        </p>
    </div>
    <div style="font-weight: 700;
                margin: 10px">
        Введите ID заказа, данные которого вы хотите удалить.
    </div>
    <div>
        <input Placeholder="ID заказа" tabindex="1" name="OrderID" type="text" />
    </div>
    <div>
        <button tabindex="2" type="submit" style="float: left">Удалить</button>
        <button tabindex="3" type="reset">Очистить</button>
    </div>
</form>

<script>

    const form = document.getElementById('RemoveOrder');

    const orderIDInput = document.querySelector('input[name="OrderID"]');

    form.addEventListener('submit', function (event) {
        event.preventDefault();

        const orderIDScript = orderIDInput.value;

        console.log('ID заказа для удаления:', orderIDScript);


        fetch('/JScript/RemoveOrder', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(orderIDScript)
        })
            .then(response => response.json())
            .then(data => {
                console.log('Успешно удален заказ:');
                console.log(data);
            })
            .catch(error => {
                console.log('Ошибка при удалении заказа:');
                console.error(error);
            });
    });
</script>