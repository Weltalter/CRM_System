<form action="#" method="post" enctype="multipart/form-data">
    <div style="font-weight: 700;
                font-size: 16px;
                margin: 10px">
        <p>
            Заполните форму, чтобы добавить новую запись заказа.
        </p>
    </div>
    <div>
        <p>
            <input Placeholder="ID заказчика" tabindex="1" name="ClientID" type="text" />
        </p>
    </div>
    <div>
        <p>
            <input Placeholder="Описание..." tabindex="2" name="Desc" type="text" />
        </p>
    </div>
    <div style="font-weight: 700">
        Дата заказа
    </div>
    <div>
        <input tabindex="3" name="OrderDate" type="date" />
    </div>
    <div>
        <p>
            <input Placeholder="Цена заказа" tabindex="4" name="Price" type="text" />
        </p>
    </div>
    <div>
        <button tabindex="5" type="submit" style="float: left">Добавить</button>
        <button tabindex="6" type="reset">Очистить</button>
    </div>
</form>